<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.org.constantinoantunes.acceleationapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Acceleration App</name>
    <description>
        Shows device acceleration
    </description>
    <author email="constantino.antunes@gmail.com" href="https://github.com/constantinoantunes">
        Constantino Antunes
    </author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-device-motion" source="npm" version="1.1.1" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
